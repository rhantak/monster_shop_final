<h1>Create a New Address</h1>

<%= form_tag '/profile/addresses' do %>
  <%= label_tag :nickname %>
  <%= text_field_tag :nickname %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :street_address %>
  <%= text_field_tag :street_address %>

  <%= label_tag :city %>
  <%= text_field_tag :city %>

  <%= label_tag :state %>
  <%= text_field_tag :state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip %>

  <%= submit_tag 'Create Address' %>
<% end %>
